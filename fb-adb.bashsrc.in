#$1 = command
#$2 = name of argument
#type in $result on success
#completion-relevant flag in $result2
#flag
_fb_adb_opt_type() {
    if ! _fb_adb_opt_type_1 "$@"; then
        return 1
    fi
    if [[ $result = [0-9]* ]]; then
       result2="${result:0:1}"
       result="${result:1}"
    else
        result2=0
    fi
}

